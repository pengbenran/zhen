.pages{background: #fff;margin-bottom: 20rpx;padding: 20rpx;}
.hbtn{text-align: center}
.hbtn button{display: inline-block;width: 220rpx;border-radius: 32rpx;line-height: 55rpx;font-size: 33rpx;background: #FF0000;color: #fff;text-align: center}
.hbtn button:active{background: rgb(240, 0, 0)}
.warp{display: flex;justify-content:center;margin-top: 20rpx;}
.warp .bntldt{width: 200rpx;line-height: 55rpx;margin-right: 10rpx;border-radius: 8rpx;
text-align: center;background: rgb(224, 224, 224);color: rgb(141, 141, 141);font-size: 33rpx;}
.warp .btnright{width: 200rpx;line-height: 55rpx;margin-left: 10rpx;border-radius: 8rpx;
text-align: center;border:1px solid #ccc;color: #666;font-size: 33rpx;}

.list{display: flex;justify-content: space-between;flex-wrap: wrap; padding: 0 2%;}
.list .item{width: 47%;background: #fff;border-radius: 15rpx;}
.item .topimg{height: 300rpx;}
.item image{height: 100%;width: 100%;}
.title{padding: 5rpx 8rpx;font-size: 32rpx;font-weight: 100; overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;}

.pricewarp{display: flex;justify-content:space-between;padding: 15rpx;}
.price{font-size: 36rpx;font-weight: bold;color:rgb(255, 2, 2); }
.num{font-size: 28rpx;color: rgb(190, 190, 190)}