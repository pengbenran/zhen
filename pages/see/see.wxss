.find_container{
  background: #fff;
}
image{
	width: 100%;
	height: 100%;
	display: block;
} 
/*发现页的头部*/
.find_panel{
	position: absolute;
	top: 0;
	left: 0;
	color: #fff;
	width: 100%;
	height: 150px;
}

.find_inpt{
	display: flex;
	width: 80%;
	height: 30px;
	margin: 20px auto;
	border-radius: 10px;
	opacity: 0.3;
	background: #fff;
}
.find_inpt input{
	width: 100%;
	height: 100%;
	padding-left: 30px;
	box-sizing:boder-box;
}
.find_bcg{
	width: 100%;
	height:150px;
	overflow: hidden;
}
.find_icon{
	width: 20px;
	height: 20px;
	display: block;
	position: absolute;
	top: 24px;
	left: 11%;
}
.find_panel_title{
	text-align: center;
  height: 200rpx;
  line-height: 200rpx;
}
.find_panel_list text{
	display: inline-block;
	width: 33%;
	text-align: center;
	font-size: 16px;
}
.find_item{
	border-bottom: 1px solid #FEFEFE;
}
.find_item li{
	display: inline-block;
	width: 20%;
	text-align: center;
	height: 50px;
	line-height: 50px;
	font-size: 16px;
}

