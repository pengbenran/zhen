      <!-- 主页 -->
      <view class='homepage' bindtap='zhuye'>
        <image src='{{homeimg}}'></image>
        <text>主页</text>
      </view>
      <view class='foo-line'></view>
      <!-- 客服 -->
      <button class='homepage custom' open-type="contact" session-from="weapp">
