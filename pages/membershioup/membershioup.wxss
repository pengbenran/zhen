/* pages/membershioup/membershioup.wxss */
image{
  width: 100%;
  height: 100%;
  display: block;
}
.membershiouphead{
  position: relative;
}
.membershioupname{
  position: absolute;
  top: 20rpx;
  left: 90rpx;
  color: #E9E9E9;
}
.membershioupavator{
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  position: absolute;
  left: 24%;
  top: 35%;
  border-radius: 50%;
  overflow: hidden;
}
.membergard{
  width: 54%;
  display: flex;
  justify-content: space-between;
  padding:0 50rpx;
  box-sizing: border-box; 
  position: absolute;
  top: 60%;
  left: 20%;
  font-size: 0.6rem;
}
.membershioupIntro{
  width: 100%;
  position: absolute;
  bottom: 10rpx;
  left: 0rpx;
  display: flex;
  padding: 0rpx 30rpx 20rpx 20rpx;
  box-sizing: border-box; 
 
}
.membershioupIntroleft{
  flex-grow:1 ;
 color: #fff;
 font-size: 0.7rem;
}
.membershioupIntroright{
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #F9EFAD;
  text-align: center;
 font-size: 0.8rem;
  border-radius: 40rpx;
}
.membergarddetail{
  background: #fff;
}
.membergardtitle{
display: flex;
background: #FAF4E8;
color: #C19657;
}
.title{
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.membergardtitle view{
  width: 25%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 0.8rem;
}
.membergardlist{
  display: flex;
  font-size: 0.8rem;
  text-align: center;
  justify-content: space-around;
}
.membergardlist>view{
  width: 25%;
}
.row1{
  height: 130rpx;
  line-height: 130rpx;
}
.row2 , .row3, .row4 view{
  height: 65rpx;
  line-height: 65rpx;
}