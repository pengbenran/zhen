/* pages/addDynamic/addDynamic.wxss */
.addInput{
  background: #fff;  
  padding: 20rpx;
}
.addInput textarea{
  width: 100%;
}
.imgContent{
  background: #fff;
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}
.imgList{
  margin-left: 10rpx;
  background: #ddd;
  margin-bottom: 10rpx;
  position: relative;
  padding: 30rpx;
  box-sizing: border-box;
}
.imgList image{
  width: 110rpx;
  height: 110rpx;
  position: absolute;
}
.imgLists{
  margin-left: 10rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.imgLists image{
  width: 100%;
  height: 100%;
  display: block;
}
.icon{
  width: 60rpx;
  height: 60rpx;
  margin-top: 27rpx;
}
.lefticon{
  width: 14px;
  height: 24px;
  margin-top: 27rpx;
  margin-left: 20rpx;
}
image{
  width: 100%;
  height: 100%;
  display: block;
}
.address{
  display: flex;
  background: #fff;
  height: 100rpx;
  margin-top: 20rpx;
  color: #4E4E4E;
  font-size: 0.9rem;
}
.addr{
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  width: 600rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.btn{
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin: 30rpx auto;
  background: #3494ff;
  color: #fff;
  border-radius: 20rpx;
}