<view class='container'>
  <view class='warpBox'>
    <view class='boxbg'><image src='{{cardbg}}'></image></view>

    <view class='box2'>
      <view class='box2top'>
       <view class='left'>
         <view class='name'>{{userinfo.cardname}}</view>
         <view class='zhiwei'><text>{{userinfo.companys}}</text><text>{{userinfo.jobs}}</text></view>
         <view class='gs'>{{userinfo.companys}}</view>
       </view> 
       <view class='right'><image src='{{userinfo.cardimg}}'></image></view>
      </view>
      <view class='dizhi'>地址：{{userinfo.region}}</view>
      <view class='phone'>电话：<text>{{userinfo.p1}}</text></view>
    </view>


    <view class='info'>
     <view><text>{{userinfo.clicks}}</text>人气</view> <view><text>{{userinfo.praise}}</text>点赞</view> <view><text>{{userinfo.attention}}</text>关注</view>
    </view>

   
    <!--item end-->
  </view>
  <view class='btnlist'>
       <button class="btnitem zanbtn {{btn0?'actives':''}}"   bindtap='zan'>{{btn0?'已赞':'赞'}}</button>
       <button class="btnitem {{btn1?'actives':''}}"  bindtap='tion'>{{btn1?'已关注':'关注'}}</button>
       <button class='btnitem' open-type='share'>分享</button>
     </view>
</view>

<view class='infobtn' bindtap='infonext'>
   <text>返回首页</text>
</view>