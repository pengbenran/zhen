/* pages/comment/comment.wxss */
.commentlist{
  display: flex;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 10rpx;
}
.left{
  width: 130rpx;
  height: 130rpx;
  overflow: hidden;
}
image{
  width: 100%;
  height: 100%;
  display: block;
}
.right{
  flex-grow:1 ;
  padding-left:30rpx;
 
}
.icon{
  width: 40rpx;
  height: 40rpx;
  overflow: hidden; 
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}
.time{
  font-size: 0.8rem;
  color: #ADADAD;
}
.content{
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 0.9rem;
}